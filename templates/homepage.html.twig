{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron-img p-2 mb-2">
    <div class="container">
        <h1 class="display-4">Tasks</h1>
    </div>
</div>
<div class="container">
    <div class="row mb-3">
        {# <div class="col">
            <button class="btn btn-question">Add a Task</button>
        </div> #}
    </div>
    <div class="row">
        {% for question in tasks %}
        <div class="col-12 mb-3">
            <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                <div class="q-container p-4">
                    <div class="row">
                        <div class="col">
                            <h2>{{ question.title }}</h2>
                            <div class="q-display p-3">
                                <p class="pt-4">{{ question.description }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

